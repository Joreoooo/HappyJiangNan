page{background-color: #f3f3f3;}
.nickName{background-color: white;font-size: 36rpx;display: flex;flex-direction: row;justify-content: center;padding: 20rpx 0;position: fixed;top: 0;width: 100%;}

/* 消息 */
.left{display: flex;flex-direction: row;align-items: center;margin-left: 40rpx;margin-bottom: 20rpx;flex-wrap: nowrap;}
.avatarUrl{width: 100rpx;height: 100rpx;border-radius: 50%;margin-right: 20rpx;flex-shrink: 0;}
.text-left{background-color:white;border-radius: 20rpx;padding: 10rpx 20rpx;margin-right: 130rpx;}
.right{display: flex;flex-direction: row;align-items: center;margin-right: 40rpx;margin-bottom: 20rpx;flex-wrap:nowrap;justify-content: flex-end;}
.avatarUrl-right{width: 100rpx;height: 100rpx;border-radius: 50%;margin-left: 20rpx;flex-shrink: 0;}
.text-right{background-color:white;border-radius: 20rpx;padding: 10rpx 20rpx;margin-left: 130rpx;}

/* 发送框 */
.pubWrap{background-color: white;display: flex;flex-direction: row;align-items: center;position: fixed;bottom: 0;padding: 20rpx 40rpx;width: 100%;height: 100rpx;}
.pubLeft{background-color: #f3f3f3;border-radius: 20rpx;color: fff;margin-right: 30rpx;height: 80rpx;}
.pubInput{padding: 10rpx 20rpx;width: 500rpx;}
.pubButton{background-color: #1c5396;border-radius: 10rpx;color: white;padding: 15rpx 20rpx;}

